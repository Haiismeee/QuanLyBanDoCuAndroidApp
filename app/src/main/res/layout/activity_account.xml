<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    tools:context=".activities.AccountActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_16sdp">

        <!-- Tiêu đề -->
        <TextView
            android:id="@+id/tvAccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý tài khoản"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Chỉnh sửa thông tin -->
        <Button
            android:id="@+id/btnEditProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin"
            android:textSize="@dimen/_14ssp"
            android:paddingVertical="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/tvAccountTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_16sdp"/>

        <!-- Danh sách tin đã đăng -->
        <Button
            android:id="@+id/btnMyPosts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Danh sách tin đã đăng"
            android:textSize="@dimen/_14ssp"
            android:paddingVertical="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"/>

        <!-- Đổi mật khẩu -->
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="@dimen/_14ssp"
            android:paddingVertical="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/btnMyPosts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"/>

        <!-- Đăng xuất -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textSize="@dimen/_14ssp"
            android:paddingVertical="@dimen/_12sdp"
            app:layout_constraintTop_toBottomOf="@id/btnChangePassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_8sdp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
