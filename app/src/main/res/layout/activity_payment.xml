<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16sdp"
    android:background="#F5F5F5">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thanh toán"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:textColor="#FF4B3A"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_16sdp"/>

    <!-- Tổng tiền -->
    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng tiền: 0 đ"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="@dimen/_20sdp"/>

    <!-- Phương thức thanh toán -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn phương thức thanh toán"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_8sdp"/>

    <RadioGroup
        android:id="@+id/radioGroupPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radioCOD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh toán khi nhận hàng (COD)"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioEwallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ví điện tử (Mô phỏng)"/>

        <RadioButton
            android:id="@+id/radioBank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyển khoản ngân hàng (Mô phỏng)"/>

        <RadioButton
            android:id="@+id/radioPayOS"
            android:text="Quét QR ngân hàng (PayOS mô phỏng)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RadioGroup>

    <!-- Button xác nhận -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnConfirmPayment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XÁC NHẬN THANH TOÁN"
        android:textColor="#FFFFFF"
        android:background="@drawable/back_order"
        android:layout_marginTop="@dimen/_24sdp"/>

</LinearLayout>
