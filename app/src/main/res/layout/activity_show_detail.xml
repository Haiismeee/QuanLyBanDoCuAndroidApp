<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activities.ShowDetailActivity">

            <!-- ===== TÊN + GIÁ ===== -->
            <LinearLayout
                android:id="@+id/line1"
                android:orientation="vertical"
                android:padding="@dimen/_8sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtnameproduct"
                    android:text="Name Product"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/purple_200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtprice"
                    android:text="VND"
                    android:textSize="@dimen/_15ssp"
                    android:textAlignment="center"
                    android:textColor="@color/purple_200"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- ===== ĐÁNH GIÁ ===== -->
            <LinearLayout
                android:id="@+id/layoutRating"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/_4sdp"
                app:layout_constraintTop_toBottomOf="@id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:id="@+id/ratingAvg"
                    android:numStars="5"
                    android:stepSize="0.5"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvTotalReview"
                    android:text="(0 đánh giá)"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#777777"
                    android:layout_marginStart="@dimen/_6sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- ===== ẢNH SẢN PHẨM ===== -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_260sdp"
                android:layout_height="@dimen/_260sdp"
                android:src="@drawable/profile"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/layoutRating"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- ===== SỐ LƯỢNG ===== -->
            <LinearLayout
                android:id="@+id/line3"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imagesub"
                    android:src="@drawable/sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txtamount"
                    android:text="1"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_12sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageadd"
                    android:src="@drawable/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- ===== MÔ TẢ ===== -->
            <TextView
                android:id="@+id/txtdesc"
                android:text="Description"
                android:textSize="@dimen/_14ssp"
                android:padding="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/line3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- ===== ADD TO CART ===== -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnadd"
                android:text="Add to cart"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:background="@drawable/back_order"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:layout_constraintTop_toBottomOf="@id/txtdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- ===== LIÊN HỆ ===== -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnContactSeller"
                android:text="Liên hệ người bán"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                android:background="@drawable/back_order"
                android:layout_marginHorizontal="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/btnadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
